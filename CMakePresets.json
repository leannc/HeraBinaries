{
    "version": 10,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "WORKSPACE_DIR":"$env{HERA_WORKSPACE_DIR}",
                "Binary_DIR": "$env{HERA_WORKSPACE_DIR}/HeraBinaries"
                
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "win-gcc-base",
            "hidden": true,
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc.exe",
                "CMAKE_CXX_COMPILER": "g++.exe"
            }

        },
        {
            "name": "win-msvc-base",
            "hidden": true,
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }

        },
        {
            "name": "x64-debug-msvc",
            "displayName": "x64 Debug msvc",
            "inherits": "win-msvc-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "LIB_TYPE_DIR_NAME": "msvc-debug",
                "LIB_NAME_SUFFIX": "d",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "/utf-8",
                "CMAKE_C_FLAGS": "/utf-8"
            }
        },
        {
            "name": "x64-debug-gcc",
            "displayName": "x64 Debug gcc",
            "inherits": "win-gcc-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "LIB_NAME_SUFFIX": "",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release-msvc",
            "displayName": "x64 Release msvc",
            "inherits": "x64-debug-msvc",
            "cacheVariables": {
                "LIB_NAME_SUFFIX": "",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "/utf-8",
                "CMAKE_C_FLAGS": "/utf-8"
            }
        },
        {
            "name": "x64-release-gcc",
            "displayName": "x64 Release gcc",
            "inherits": "x64-debug-gcc",
            "cacheVariables": {
                "LIB_NAME_SUFFIX": "",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "inherits": "x86-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug-build",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-debug-msvc",
            "targets": ["install"] 
        }
    ]
}
